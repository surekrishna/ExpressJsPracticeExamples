doctype html

html
	head
		title Login

	body
		div
			form#login(action = '/login', method = 'post')
				div
					label(for = 'username') Username: 
					input#username(type = 'text', name = 'username', placeholder = 'Enter username')

				br

				div
					label(for = 'password') Password: 
					input#password(type = 'password', name = 'password', placeholder = 'Enter password')

				br

				button(type = 'submit') Login


